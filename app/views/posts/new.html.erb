<h1>Queens closet</h1>
<h3>新規brand投稿ページ</h3>
<%= form_for @post do |f| %>

  <div class="field">
    <%= f.label :brand_name %>
    <%= f.text_field :name, size: 30 %>
  </div>

  <div class="field">
  <%= f.label :image %>
  <%= f.file_field :image %>
</div>

<div class="field">
<%= f.label :image2 %>
<%= f.file_field :image2 %>
</div>

<div class="field">
<%= f.label :image3 %>
<%= f.file_field :image3 %>
</div>

<div class="field">
<%= f.label :image4 %>
<%= f.file_field :image4 %>
</div>

  <div class="field">
    <%= f.label :brand_detail  %>
    <%= f.text_area :detail, size: "30x2" %>
  </div>

  <%= f.submit "投稿する" %>
  <% end %>
  
  <%= link_to "一覧に戻る", posts_path %>